<AllDrinksScreen>:
    drink_layout: drink_layout

    GridLayout:
		rows: 2

		ScrollView:
			do_scroll_x: False
			size_hint: (1, 1)
			bar_width: 10
			bar_color: 0, 0, 1, 0.5
			bar_inactive_color: 0, 0, 1, 1
			effect_cls: "DampedScrollEffect"

			GridLayout:
			    cols: 3
				id: drink_layout
				size_hint_y: None
				padding: [30, 10, 10, 10]
				spacing: [40, 20]

		GridLayout:
            cols: 3
            size_hint_y: 0.2

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'
                size_hint_x: 0.75
                padding: [8, 10, 5, 5]

                Button:
                    text: 'Back'
                    font_size: 20
                    on_release:
                        root.manager.current = 'home'

            Label:
                text: 'R.I.C.K.'
                font_size: 60
                halign: 'center'
                valign: 'middle'

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                size_hint_x: 0.75
                padding: [5, 10, 8, 5]

                Button:
                    width: root.width/4 - 30
                    text: 'Categories'
                    font_size: 20
                    on_release:
                        root.manager.current = 'category'

