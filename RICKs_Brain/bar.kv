<DispenseScreen>:
    name_label: name_label
    ingredient_layout: ingredient_layout
    garnish_label: garnish_label
    drink_img: drink_img
    instructions_label: instructions_label

    GridLayout:
        rows: 2

        GridLayout:
            cols: 2

            GridLayout:
                rows: 5

                Label:
                    id: name_label
                    size_hint_y: None
                    height: 50
                    font_size: 30
                    halign: 'left'
                    valign: 'top'

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: 40

                    Label:
                        text: 'Ingredient'
                        text_size: self.size
                        halign: 'center'
                        valign: 'bottom'
                        font_size: 20
                        bold: True
                        underline: True
                        padding_x: 20

                    Label:
                        text: 'Amount'
                        text_size: self.size
                        halign: 'center'
                        valign: 'bottom'
                        font_size: 20
                        bold: True
                        underline: True
                        padding_x: 20

                GridLayout:
                    cols: 2
                    id: ingredient_layout
                    size: self.size

                Label:
                    text: 'Garnish'
                    text_size: self.size
                    halign: 'center'
                    valign: 'bottom'
                    size_hint_y: None
                    height: 30
                    font_size: 20
                    bold: True
                    underline: True

                Label:
                    id: garnish_label
                    size_hint_y: None
                    height: 50
                    font_size: 20



            GridLayout:
                rows: 4

                Label:
                    size_hint_y: None
                    height: 10

                Image:
                    id: drink_img
                    size: self.texture_size

                Label:
                    text: 'Instructions'
                    text_size: self.size
                    halign: 'center'
                    valign: 'bottom'
                    size_hint_y: None
                    height: 30
                    font_size: 20
                    bold: True
                    underline: True

                Label:
                    id: instructions_label
                    size_hint_y: None
                    height: 50
                    font_size: 20
                    multiline: True

        GridLayout:
            cols: 3
            size_hint_y: None
            height: 80

            Button:
                text: 'Back'
                font_size: 25
                on_release:
                    root.manager.current = 'drinks'

            Label:
                size_hint_x: 0.05

            Button:
                text: 'Dispense'
                font_size: 25

