                halign: 'center'
                valign: 'middle'

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                size_hint_x: 0.75
                padding: [5, 10, 8, 5]

                Button:
                    width: root.width/4 - 30
                    text: 'Dispense'
                    font_size: 20

