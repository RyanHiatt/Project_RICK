<ShotsScreen>:

	GridLayout:
		rows: 3

		Label:
			size_hint_y: 0.25
			text: 'Shots and Neats'
			text_size: self.size
			font_size: 60
			halign: 'center'
			valign: 'middle'

		GridLayout:
			rows: 2
			cols: 3

			AnchorLayout:
				anchor_x: 'center'
				Button:
					width: root.width/3.5
					size_hint_x: None
					size_hint_y: 0.8
					text: 'Whiskey'
					font_size: 40
					on_press: root.open_shotspop()

			AnchorLayout:
				anchor_x: 'center'
				Button:
					width: root.width/3.5
					size_hint_x: None
					size_hint_y: 0.8
					text: 'Vodka'
					font_size: 40
					on_press: root.open_shotspop()

			AnchorLayout:
				anchor_x: 'center'
				Button:
					width: root.width/3.5
					size_hint_x: None
					size_hint_y: 0.8
					text: 'Tequila'
					font_size: 40
					on_press: root.open_shotspop()

			AnchorLayout:
				anchor_x: 'center'
				Button:
					width: root.width/3.5
					size_hint_x: None
					size_hint_y: 0.8
					text: 'Rum'
					font_size: 40
					on_press: root.open_shotspop()

			AnchorLayout:
				anchor_x: 'center'
				Button:
					width: root.width/3.5
					size_hint_x: None
					size_hint_y: 0.8
					text: 'Gin'
					font_size: 40
					on_press: root.open_shotspop()

			AnchorLayout:
				anchor_x: 'center'
				Button:
					width: root.width/3.5
					size_hint_x: None
					size_hint_y: 0.8
					text: 'Brandy'
					font_size: 40
					on_press: root.open_shotspop()

		AnchorLayout:
			size_hint_y: 0.25
			anchor_x: 'center'
