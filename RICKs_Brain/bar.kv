<HomeScreen>:
    clock_label: clock_label

    GridLayout:
        rows: 3

## Top Row
        Label:
            id: clock_label
            size_hint_y: 0.2
            font_size: 40

## Middle Row
        GridLayout:
            cols: 4
            padding: [5, 0, 5, 0]

            AnchorLayout:
                anchor_x: 'center'

                Button:
                    size_hint_x: 0.98
                    text: 'All Drinks'
                    font_size: 30
                    on_release:
                        root.manager.current = 'drinks'

            AnchorLayout:
                anchor_x: 'center'

                Button:
                    size_hint_x: 0.98
                    text: 'Shots'
                    font_size: 30
                    on_release:
                        root.manager.current = 'shots'

            AnchorLayout:
                anchor_x: 'center'

                Button:
                    size_hint_x: 0.98
                    text: 'Favorites'
                    font_size: 30
                    on_release:
                        root.manager.current = 'favorites'

            AnchorLayout:
                anchor_x: 'center'

                Button:
                    size_hint_x: 0.98
                    text: 'Create Drink'
                    font_size: 30
                    on_release:
                        root.manager.current = 'create'

## Bottom Row
        GridLayout:
            cols: 3
            size_hint_y: 0.25

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'
                size_hint_x: 0.75
                padding: [8, 10, 5, 5]

                Button:
                    text: 'Lock Device'
                    font_size: 20
                    on_release:
                        root.open_lockpop()

            Label:
                text: 'R.I.C.K.'
                font_size: 60
                halign: 'center'
                valign: 'middle'

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                size_hint_x: 0.75
                padding: [5, 10, 8, 5]

                Button:
                    width: root.width/4 - 30
                    text: 'Settings'
                    font_size: 20
                    on_release:
                        root.manager.current = 'home'

